{
  "name": "pkg-jq",
  "version": "0.0.7",
  "description": "Find the nearest package.json then modify it inline by jq syntax",
  "main": "dist/src/index.js",
  "dependencies": {
    "argparse": "^1.0.10",
    "node-jq": "^1.9.0",
    "pkg-up": "^3.1.0",
    "update-notifier": "^3.0.0"
  },
  "devDependencies": {
    "@chatie/eslint-config": "^0.4.1",
    "@chatie/git-scripts": "^0.1.1",
    "@chatie/semver": "^0.4.2",
    "@chatie/tsconfig": "^0.6.1",
    "@types/argparse": "^1.0.36",
    "@types/update-notifier": "^2.5.0",
    "read-pkg-up": "^6.0.0",
    "shx": "^0.3.2",
    "tstest": "^0.2.4"
  },
  "scripts": {
    "build": "tsc",
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && npm run build",
    "pack": "npm pack",
    "pkg-jq": "ts-node --files bin/pkg-jq.ts",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:es": "eslint --ignore-pattern fixtures/ bin/**/*.ts src/**/*.ts tests/**/*.ts",
    "lint:ts": "tsc --noEmit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test": "ts-node --files ./node_modules/.bin/blue-tape \"src/**/*.spec.ts\" \"src/*.spec.ts\" \"tests/*.spec.ts\" \"tests/**/*.spec.ts\""
  },
  "bin": {
    "pkg-jq": "dist/bin/pkg-jq.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huan/pkg-jq.git"
  },
  "keywords": [
    "package",
    "jq",
    "pkg-up",
    "edit"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/huan/pkg-jq/issues"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "homepage": "https://github.com/huan/pkg-jq#readme"
}
